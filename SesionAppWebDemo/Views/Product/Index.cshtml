@model IEnumerable<SesionAppWebDemo.Models.Product>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.css">

<h1> Administración de productos</h1>
<a asp-controller="Product" asp-action="CreateProduct" class="btn btn-success">Crear nuevo producto</a>

@if(Model.Count() > 0)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Listado de Productos</h3>
        </div>
        <div class="panel-body">
            <table class="table table-hover table-responsive table-striped table-bordered" id="MyTable">
                <thead>
                    <tr>
                        <td>Nombre</td>
                        <td>Description</td>
                        <td>Stock</td>
                        <td>Fecha de Registr</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr width="100%">
                            <td width="25%">@item.Name</td>
                            <td width="25%">@item.Description</td>
                            <td width="25%">@item.Stock</td>
                            <td width="25%">@item.DateRegister</td>
                            <td width="25%">
                                <a asp-controller="Product" asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-warning mx-1">Editar</a>
                                <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-danger mx-1" onclick="return confirm('¿Está seguro que desea archivar este estadio?');">Eliminar</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

else
{
    <p>No items created yet</p>
}